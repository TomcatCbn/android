<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textcode"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/tvFileName"
        android:text="download file path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <ProgressBar
        android:id="@+id/btProgress"
        android:layout_below="@id/tvFileName"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvFileName"
        />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:id="@+id/btStop"
        android:layout_below="@id/btProgress"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止"
        />
    <Button
        android:id="@+id/btStart"
        android:text="开始"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_toLeftOf="@id/btStop"
        android:layout_below="@id/btProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btItemlist"
        android:layout_alignParentBottom="true"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:layout_centerHorizontal="true"
        android:text="下载列表"
        android:textSize="25sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testbutton"
        android:text="测试Button"
        android:layout_above="@id/btItemlist"
        />


</RelativeLayout>
